{
  "compilerOptions": {
    "module": "ESNext",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "allowJs": false
  },
  "references": [
    { "path": "../src" }
  ]
}